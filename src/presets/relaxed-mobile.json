{
  "ci": {
    "collect": {
      "settings": {}
    },
    "assert": {
      "includePassedAssertions": false,
      "assertMatrix": [
        {
          "matchingUrlPattern": ".*",
          "preset": "lighthouse:recommended",
          "aggregationMethod": "median",
          "assertions": {
            "categories:performance": ["warn", { "minScore": 0.50 }],
            "categories:accessibility": ["warn", { "minScore": 0.85 }],
            "categories:best-practices": ["warn", { "minScore": 0.85 }],
            "categories:seo": ["warn", { "minScore": 0.85 }],

            "first-contentful-paint": ["warn", { "maxNumericValue": 5500 }],
            "largest-contentful-paint": ["warn", { "maxNumericValue": 7000 }],
            "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.20 }],
            "total-blocking-time": ["warn", { "maxNumericValue": 900 }],
            "speed-index": ["warn", { "maxNumericValue": 9000 }],
            "interactive": ["warn", { "maxNumericValue": 9000 }],

            "network-dependency-tree-insight": "off",
            "render-blocking-insight": "off",
            "render-blocking-resources": "off"
          }
        },
        {
          "matchingUrlPattern": ".*",
          "aggregationMethod": "median",
          "assertions": {
            "categories:performance": ["error", { "minScore": 0.30 }],
            "categories:accessibility": ["error", { "minScore": 0.80 }],
            "categories:best-practices": ["error", { "minScore": 0.80 }],
            "categories:seo": ["error", { "minScore": 0.80 }],

            "first-contentful-paint": ["error", { "maxNumericValue": 9000 }],
            "largest-contentful-paint": ["error", { "maxNumericValue": 10000 }],
            "cumulative-layout-shift": ["error", { "maxNumericValue": 0.40 }],
            "total-blocking-time": ["error", { "maxNumericValue": 1500 }],
            "speed-index": ["error", { "maxNumericValue": 14000 }],
            "interactive": ["error", { "maxNumericValue": 14000 }]
          }
        }
      ]
    }
  }
}
